<Application
    x:Class="CostMasterAI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CostMasterAI"
    xmlns:toolkit="using:CommunityToolkit.WinUI">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <x:Double x:Key="Breakpoint640Plus">640</x:Double>

            <toolkit:AttachedDropShadow x:Key="CardShadow"
                                        BlurRadius="24"
                                        Color="#000000"
                                        CornerRadius="12"
                                        IsMasked="True"
                                        Offset="0,6,0"
                                        Opacity="0.25" />

            <Style x:Key="ModernCardStyle" TargetType="Grid">
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="toolkit:Effects.Shadow" Value="{StaticResource CardShadow}"/>
            </Style>

            <Style x:Key="ModernButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="{ThemeResource CardBorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{ThemeResource AccentBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="CornerRadius" Value="6"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <ResourceDictionary.ThemeDictionaries>

                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F9FAFB"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="CardBorderBrush" Color="#E5E7EB"/>
                    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827"/>
                    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6B7280"/>
                    <SolidColorBrush x:Key="InputBackgroundBrush" Color="Transparent"/>
                    <SolidColorBrush x:Key="InputTextBrush" Color="#111827"/>

                    <SolidColorBrush x:Key="SuccessBrush" Color="#10B981"/>
                    <SolidColorBrush x:Key="DangerBrush" Color="#DC2626"/>
                    <SolidColorBrush x:Key="DangerBackgroundBrush" Color="#FEF2F2"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="#4F46E5"/>
                    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="#F3F4F6"/>
                </ResourceDictionary>

                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#030712"/>
                    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#111827"/>
                    <SolidColorBrush x:Key="CardBorderBrush" Color="#1F2937"/>
                    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#F9FAFB"/>
                    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#9CA3AF"/>
                    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#1F2937"/>
                    <SolidColorBrush x:Key="InputTextBrush" Color="#F3F4F6"/>

                    <SolidColorBrush x:Key="SuccessBrush" Color="#34D399"/>
                    <SolidColorBrush x:Key="DangerBrush" Color="#F87171"/>
                    <SolidColorBrush x:Key="DangerBackgroundBrush" Color="#450A0A"/>
                    <SolidColorBrush x:Key="AccentBrush" Color="#818CF8"/>
                    <SolidColorBrush x:Key="SubtleBackgroundBrush" Color="#1F2937"/>
                </ResourceDictionary>

            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
