<Page
    x:Class="CostMasterAI.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI.Controls"
    xmlns:ani="using:CommunityToolkit.WinUI.Animations"
    xmlns:helpers="using:CostMasterAI.Helpers"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:CurrencyConverter x:Key="MoneyConv"/>
        <helpers:BoolToVisibilityConverter x:Key="BoolVisConv"/>
        <helpers:PercentageToWidthConv x:Key="PercentageToWidthConv"/>
        <helpers:DateConverter x:Key="DateConv"/>

        <FontFamily x:Key="RemixIcon">/Assets/remixicon.ttf#remixicon</FontFamily>
        <FontFamily x:Key="AppFont">/Assets/Satoshi-Regular.otf#Satoshi</FontFamily>
        <FontFamily x:Key="AppFontBold">/Assets/Satoshi-Bold.otf#Satoshi</FontFamily>
        <FontFamily x:Key="AppFontMedium">/Assets/Satoshi-Medium.otf#Satoshi</FontFamily>
        <FontFamily x:Key="AppFontBlack">/Assets/Satoshi-Black.otf#Satoshi</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource AppFontMedium}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="PageTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFontBlack}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextPrimaryBrush}"/>
            <Setter Property="CharacterSpacing" Value="-10"/>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="Foreground" Value="{ThemeResource TextSecondaryBrush}"/>
        </Style>

        <Style x:Key="DashboardCardStyle" TargetType="Grid" BasedOn="{StaticResource ModernCardStyle}">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Height" Value="160"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{ThemeResource CardBorderBrush}"/>
            <Setter Property="Background" Value="{ThemeResource CardBackgroundBrush}"/>
        </Style>

        <Style x:Key="MatrixCardStyle" TargetType="Grid">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="BigMetricStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource AppFontBlack}"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="CharacterSpacing" Value="-20"/>
        </Style>
    </Page.Resources>

    <ScrollViewer Background="{ThemeResource AppBackgroundBrush}" UseLayoutRounding="True">

        <ScrollViewer.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="Refresh Dashboard" Icon="Refresh" 
                                Command="{Binding LoadDashboardDataCommand}"/>
            </MenuFlyout>
        </ScrollViewer.ContextFlyout>

        <Grid Padding="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Spacing="4">
                    <TextBlock Text="Executive Dashboard" Style="{StaticResource PageTitleStyle}"/>
                    <TextBlock Text="Enterprise Analytics &amp; Financial Health Monitor" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                    <Button Command="{Binding LoadDashboardDataCommand}" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Background="{ThemeResource CardBackgroundBrush}" BorderBrush="{ThemeResource CardBorderBrush}" BorderThickness="1" Padding="12,8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xf064;" FontSize="16" Foreground="{ThemeResource TextSecondaryBrush}"/>
                            <TextBlock Text="Refresh Data" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <Border Background="{ThemeResource SubtleBackgroundBrush}" CornerRadius="4" Padding="8,4" Visibility="{Binding IsLoading, Converter={StaticResource BoolVisConv}}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <ProgressRing IsActive="True" Width="16" Height="16"/>
                            <TextBlock Text="Analyzing..." FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" ColumnSpacing="24" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Style="{StaticResource DashboardCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock Text="REVENUE (ACTUAL)" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" CharacterSpacing="50"/>
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xebc6;" FontSize="20" HorizontalAlignment="Right" Foreground="{ThemeResource AccentBrush}" Opacity="0.8"/>
                    </Grid>
                    <Viewbox Grid.Row="1" StretchDirection="DownOnly" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding CurrentRevenue, Converter={StaticResource MoneyConv}}" Style="{StaticResource BigMetricStyle}" Foreground="{ThemeResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </Viewbox>
                    <TextBlock Grid.Row="2" Text="Total Uang Masuk" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}" FontFamily="{StaticResource AppFont}"/>
                </Grid>

                <Grid Grid.Column="1" Style="{StaticResource DashboardCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock Text="OPPORTUNITY LOSS" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" CharacterSpacing="50"/>
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xec4e;" FontSize="20" HorizontalAlignment="Right" Foreground="#F59E0B" Opacity="0.8"/>
                    </Grid>
                    <Viewbox Grid.Row="1" StretchDirection="DownOnly" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding RevenueGap, Converter={StaticResource MoneyConv}}" Style="{StaticResource BigMetricStyle}" Foreground="#F59E0B" VerticalAlignment="Center"/>
                    </Viewbox>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Potensi:" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}" FontFamily="{StaticResource AppFont}"/>
                        <TextBlock Text="{Binding PotentialRevenue, Converter={StaticResource MoneyConv}}" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2" Style="{StaticResource DashboardCardStyle}" Background="{ThemeResource AccentBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock Text="NET PROFIT (THIS MONTH)" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="White" Opacity="0.8" CharacterSpacing="50"/>
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xef65;" FontSize="20" HorizontalAlignment="Right" Foreground="White" Opacity="0.9"/>
                    </Grid>
                    <Viewbox Grid.Row="1" StretchDirection="DownOnly" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding CurrentNetProfit, Converter={StaticResource MoneyConv}}" Style="{StaticResource BigMetricStyle}" Foreground="White" VerticalAlignment="Center"/>
                    </Viewbox>
                    <TextBlock Grid.Row="2" Text="Keuntungan Bersih" FontSize="12" Foreground="White" Opacity="0.6" FontFamily="{StaticResource AppFont}"/>
                </Grid>

                <Grid Grid.Column="3" Style="{StaticResource DashboardCardStyle}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid>
                        <TextBlock Text="CASH BALANCE" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" CharacterSpacing="50"/>
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xf11e;" FontSize="20" HorizontalAlignment="Right" Foreground="{ThemeResource SuccessBrush}" Opacity="0.8"/>
                    </Grid>
                    <Viewbox Grid.Row="1" StretchDirection="DownOnly" HorizontalAlignment="Left">
                        <TextBlock Text="{Binding CashFlowBalance, Converter={StaticResource MoneyConv}}" Style="{StaticResource BigMetricStyle}" Foreground="{ThemeResource SuccessBrush}" VerticalAlignment="Center"/>
                    </Viewbox>
                    <TextBlock Grid.Row="2" Text="Saldo Kas Berjalan" FontSize="12" Foreground="{ThemeResource TextSecondaryBrush}" FontFamily="{StaticResource AppFont}"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" ColumnSpacing="24" Margin="0,0,0,32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Style="{StaticResource DashboardCardStyle}" Height="140">
                    <StackPanel>
                        <TextBlock Text="GROSS MARGIN AVG" FontSize="11" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" CharacterSpacing="50"/>
                        <TextBlock Text="{Binding GlobalGrossProfitMargin}" FontSize="32" FontFamily="{StaticResource AppFontBlack}" Foreground="{ThemeResource TextPrimaryBrush}" Margin="0,4"/>
                        <TextBlock Text="Target: >50%" FontSize="11" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" Style="{StaticResource DashboardCardStyle}" Height="140">
                    <StackPanel>
                        <TextBlock Text="INVENTORY VALUE" FontSize="11" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" CharacterSpacing="50"/>
                        <Viewbox StretchDirection="DownOnly" HorizontalAlignment="Left" Height="40">
                            <TextBlock Text="{Binding TotalProductionCost, Converter={StaticResource MoneyConv}}" FontSize="32" FontFamily="{StaticResource AppFontBlack}" Foreground="{ThemeResource TextPrimaryBrush}" Margin="0,4"/>
                        </Viewbox>
                        <TextBlock Text="Est. Cost Produksi" FontSize="11" Foreground="{ThemeResource TextSecondaryBrush}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2" Style="{StaticResource DashboardCardStyle}" Height="140">
                    <StackPanel>
                        <TextBlock Text="EFFICIENCY SCORE" FontSize="11" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" CharacterSpacing="50"/>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="{Binding EfficiencyScore}" FontSize="32" FontFamily="{StaticResource AppFontBlack}" Foreground="{ThemeResource AccentBrush}" Margin="0,4"/>
                            <TextBlock Text="/100" FontSize="16" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,8,0,0"/>
                        </StackPanel>
                        <TextBlock Text="{Binding EfficiencyStatus}" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="#F59E0B"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Row="3" ColumnSpacing="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.8*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="24">
                    <Grid Style="{StaticResource ModernCardStyle}" Padding="24" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" BorderThickness="1" BorderBrush="{ThemeResource CardBorderBrush}">
                        <StackPanel Spacing="20">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xeffa;" FontSize="18" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                <TextBlock Text="Cost Structure Breakdown" FontSize="16" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            </StackPanel>

                            <ItemsControl ItemsSource="{Binding CostStructure}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,0,0,16">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Margin="0,0,0,8">
                                                <TextBlock Text="{Binding Category}" FontFamily="{StaticResource AppFontBold}" FontSize="14" Foreground="{ThemeResource TextPrimaryBrush}"/>
                                                <TextBlock Text="{Binding Amount, Converter={StaticResource MoneyConv}}" HorizontalAlignment="Right" FontFamily="{StaticResource AppFontMedium}" Foreground="{ThemeResource TextSecondaryBrush}"/>
                                            </Grid>
                                            <Grid Grid.Row="1" Height="8" Background="{ThemeResource SubtleBackgroundBrush}" CornerRadius="4">
                                                <Grid HorizontalAlignment="Left" Height="8" CornerRadius="4" 
                                                      Background="{Binding Color}" 
                                                      Width="{Binding Percentage, Converter={StaticResource PercentageToWidthConv}, ConverterParameter='3.0'}"/>
                                            </Grid>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Grid>

                    <Grid Style="{StaticResource ModernCardStyle}" Padding="24" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" BorderThickness="1" BorderBrush="{ThemeResource CardBorderBrush}">
                        <StackPanel Spacing="16">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xea1d;" FontSize="18" Foreground="{ThemeResource DangerBrush}"/>
                                <TextBlock Text="Top 5 Pemborosan (Pareto)" FontSize="16" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource DangerBrush}"/>
                            </StackPanel>

                            <ListView ItemsSource="{Binding TopCostDrivers}" SelectionMode="None">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Padding" Value="0"/>
                                        <Setter Property="Margin" Value="0,4"/>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Padding="12,10" Background="{ThemeResource DangerBackgroundBrush}" CornerRadius="8">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel>
                                                <TextBlock Text="{Binding Name}" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource DangerBrush}"/>
                                                <TextBlock Text="{Binding Percentage}" FontSize="12" FontFamily="{StaticResource AppFont}" Opacity="0.7" Foreground="{ThemeResource DangerBrush}"/>
                                            </StackPanel>
                                            <TextBlock Grid.Column="1" Text="{Binding TotalCostContribution, Converter={StaticResource MoneyConv}}" 
                                                       VerticalAlignment="Center" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource DangerBrush}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <Grid Grid.Column="1" Style="{StaticResource ModernCardStyle}" Padding="24" Background="{ThemeResource CardBackgroundBrush}" CornerRadius="12" BorderThickness="1" BorderBrush="{ThemeResource CardBorderBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Spacing="4" Margin="0,0,0,24">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xea44;" FontSize="20" Foreground="{ThemeResource TextPrimaryBrush}"/>
                            <TextBlock Text="Product Portfolio Matrix (BCG)" FontSize="18" FontFamily="{StaticResource AppFontBold}" Foreground="{ThemeResource TextPrimaryBrush}"/>
                        </StackPanel>
                        <TextBlock Text="Analisa strategi menu berdasarkan Profitabilitas vs Volume Penjualan." FontSize="14" Foreground="{ThemeResource TextSecondaryBrush}" FontFamily="{StaticResource AppFont}"/>
                    </StackPanel>

                    <Grid Grid.Row="1" ColumnSpacing="16" RowSpacing="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Grid.Column="1" Style="{StaticResource MatrixCardStyle}" Background="#ECFDF5" BorderBrush="#34D399">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xf186;" Foreground="#059669" FontSize="18"/>
                                    <TextBlock Text="STARS" FontFamily="{StaticResource AppFontBlack}" Foreground="#059669" FontSize="14" CharacterSpacing="50"/>
                                </StackPanel>
                                <TextBlock Text="High Profit, High Sales" FontSize="12" FontFamily="{StaticResource AppFontMedium}" Foreground="#059669" Opacity="0.8" Margin="0,4,0,12"/>
                                <TextBlock Text="{Binding StarProductsCount}" FontSize="56" FontFamily="{StaticResource AppFontBlack}" Foreground="#059669" HorizontalAlignment="Right" Margin="0,-20,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="0" Style="{StaticResource MatrixCardStyle}" Background="#EFF6FF" BorderBrush="#60A5FA">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xef64;" Foreground="#2563EB" FontSize="18"/>
                                    <TextBlock Text="CASH COWS" FontFamily="{StaticResource AppFontBlack}" Foreground="#2563EB" FontSize="14" CharacterSpacing="50"/>
                                </StackPanel>
                                <TextBlock Text="Low Profit, High Sales" FontSize="12" FontFamily="{StaticResource AppFontMedium}" Foreground="#2563EB" Opacity="0.8" Margin="0,4,0,12"/>
                                <TextBlock Text="{Binding CashCowCount}" FontSize="56" FontFamily="{StaticResource AppFontBlack}" Foreground="#2563EB" HorizontalAlignment="Right" Margin="0,-20,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="1" Style="{StaticResource MatrixCardStyle}" Background="#FFFBEB" BorderBrush="#FBBF24">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xf450;" Foreground="#D97706" FontSize="18"/>
                                    <TextBlock Text="PUZZLES" FontFamily="{StaticResource AppFontBlack}" Foreground="#D97706" FontSize="14" CharacterSpacing="50"/>
                                </StackPanel>
                                <TextBlock Text="High Profit, Low Sales" FontSize="12" FontFamily="{StaticResource AppFontMedium}" Foreground="#D97706" Opacity="0.8" Margin="0,4,0,12"/>
                                <TextBlock Text="{Binding PuzzleCount}" FontSize="56" FontFamily="{StaticResource AppFontBlack}" Foreground="#D97706" HorizontalAlignment="Right" Margin="0,-20,0,0"/>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="0" Style="{StaticResource MatrixCardStyle}" Background="#FEF2F2" BorderBrush="#F87171">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xec95;" Foreground="#DC2626" FontSize="18"/>
                                    <TextBlock Text="DOGS" FontFamily="{StaticResource AppFontBlack}" Foreground="#DC2626" FontSize="14" CharacterSpacing="50"/>
                                </StackPanel>
                                <TextBlock Text="Low Profit, Low Sales" FontSize="12" FontFamily="{StaticResource AppFontMedium}" Foreground="#DC2626" Opacity="0.8" Margin="0,4,0,12"/>
                                <TextBlock Text="{Binding DogCount}" FontSize="56" FontFamily="{StaticResource AppFontBlack}" Foreground="#DC2626" HorizontalAlignment="Right" Margin="0,-20,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>