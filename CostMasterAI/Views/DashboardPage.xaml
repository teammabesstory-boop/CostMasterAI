<Page
    x:Class="CostMasterAI.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="0,0,0,24">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="Executive Dashboard ðŸ“Š" Style="{StaticResource TitleTextBlockStyle}"/>
                <ProgressRing IsActive="{Binding IsLoading}" Width="20" Height="20" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Ringkasan performa &amp; statistik dapur Anda." Opacity="0.6"/>
                <TextBlock Text="|" Opacity="0.3"/>
                <TextBlock Text="{Binding StatusMessage}" Opacity="0.5" FontStyle="Italic"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" ColumnSpacing="16" Margin="0,0,0,32">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20" CornerRadius="8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Opacity="0.6">
                        <SymbolIcon Symbol="OutlineStar"/>
                        <TextBlock Text="Total Menu"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalRecipes}" FontSize="42" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20" CornerRadius="8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Opacity="0.6">
                        <SymbolIcon Symbol="Library"/>
                        <TextBlock Text="Database Bahan"/>
                    </StackPanel>
                    <TextBlock Text="{Binding TotalIngredients}" FontSize="42" FontWeight="Bold" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="2" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="20" CornerRadius="8">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" Opacity="0.6">
                        <SymbolIcon Symbol="Shop"/>
                        <TextBlock Text="Avg. Target Margin"/>
                    </StackPanel>
                    <TextBlock Text="{Binding AverageMargin}" FontSize="42" FontWeight="Bold" Foreground="Green" Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>

        <TextBlock Grid.Row="2" Text="AI Insights ðŸ§ " Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

        <Grid Grid.Row="3" ColumnSpacing="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="#22FF0000">
                <StackPanel Spacing="8">
                    <TextBlock Text="ðŸ’° Modal Tertinggi" FontWeight="Bold" Foreground="OrangeRed"/>
                    <TextBlock Text="{Binding HighestCostRecipeName}" FontSize="18" TextTrimming="CharacterEllipsis" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="HPP:" Opacity="0.6"/>
                        <TextBlock Text="{Binding HighestCostValue, Converter={StaticResource MoneyConv}}" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="16" CornerRadius="8" BorderThickness="1" BorderBrush="#22008000">
                <StackPanel Spacing="8">
                    <TextBlock Text="ðŸ“ˆ Potensi Cuan Tertinggi" FontWeight="Bold" Foreground="Green"/>
                    <TextBlock Text="{Binding HighestMarginRecipeName}" FontSize="18" TextTrimming="CharacterEllipsis" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Margin:" Opacity="0.6"/>
                        <TextBlock Text="{Binding HighestMarginValue}" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="2" Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" Padding="16" CornerRadius="8">
                <StackPanel Spacing="8">
                    <TextBlock Text="ðŸ§© Paling Kompleks" FontWeight="Bold" Opacity="0.8"/>
                    <TextBlock Text="{Binding MostComplexRecipeName}" FontSize="18" TextTrimming="CharacterEllipsis" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <TextBlock Text="Total Item:" Opacity="0.6"/>
                        <TextBlock Text="{Binding MostComplexCount}" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>