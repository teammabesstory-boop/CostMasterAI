<Page
    x:Class="CostMasterAI.Views.ShoppingListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:helpers="using:CostMasterAI.Helpers"
    
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:BindingProxy x:Key="ViewModelProxy" Data="{Binding}" />

        <FontFamily x:Key="RemixIcon">/Assets/remixicon.ttf#remixicon</FontFamily>
        <FontFamily x:Key="AppFont">/Assets/Satoshi-Regular.otf#Satoshi</FontFamily>
        <FontFamily x:Key="AppFontBold">/Assets/Satoshi-Bold.otf#Satoshi</FontFamily>
        <FontFamily x:Key="AppFontMedium">/Assets/Satoshi-Medium.otf#Satoshi</FontFamily>
        <FontFamily x:Key="AppFontBlack">/Assets/Satoshi-Black.otf#Satoshi</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource AppFont}"/>
            <Setter Property="Foreground" Value="#1F2937"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource AppFontMedium}"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>

        <Style x:Key="PageTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontFamily" Value="{StaticResource AppFontBlack}"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="CharacterSpacing" Value="-10"/>
        </Style>
    </Page.Resources>

    <Grid Background="#F9FAFB" UseLayoutRounding="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="White" BorderThickness="0,0,1,0" BorderBrush="#E5E7EB">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Padding="24,32,24,24" Spacing="4">
                <TextBlock Text="Production Plan" Style="{StaticResource PageTitleStyle}"/>
                <TextBlock Text="Pilih menu yang akan dimasak hari ini." FontSize="14" Foreground="#6B7280" FontFamily="{StaticResource AppFont}"/>
            </StackPanel>

            <Grid Grid.Row="1" Padding="24,0,24,24" ColumnSpacing="12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding AllRecipes}" SelectedItem="{Binding SelectedRecipeToAdd, Mode=TwoWay}" 
                          DisplayMemberPath="Name" PlaceholderText="Pilih Menu..." HorizontalAlignment="Stretch"
                          FontFamily="{StaticResource AppFontMedium}" CornerRadius="6" Height="40"/>

                <Button Grid.Column="1" Command="{Binding AddToPlanCommand}" Style="{StaticResource PrimaryButtonStyle}" Height="40" Padding="16,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xEA13;"/>
                        <TextBlock Text="Add" FontFamily="{StaticResource AppFontBold}"/>
                    </StackPanel>
                </Button>
            </Grid>

            <ListView Grid.Row="2" ItemsSource="{Binding ProductionPlan}" Padding="12" SelectionMode="None">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="0"/>
                        <Setter Property="Margin" Value="0,4"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="#F9FAFB" CornerRadius="8" Padding="16,12" BorderBrush="#E5E7EB" BorderThickness="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Recipe.Name}" FontFamily="{StaticResource AppFontBold}" FontSize="15"/>
                                <StackPanel Orientation="Horizontal" Spacing="4" Opacity="0.6">
                                    <TextBlock Text="Yield Asli:" FontSize="12"/>
                                    <TextBlock Text="{Binding Recipe.YieldQty}" FontSize="12"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="16,0">
                                <TextBlock Text="Target:" VerticalAlignment="Center" FontSize="13" Foreground="#6B7280"/>
                                <TextBox Text="{Binding TargetQty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="70" HorizontalAlignment="Right"
                                         FontFamily="{StaticResource AppFontBold}" HorizontalContentAlignment="Center"/>
                                <TextBlock Text="Pcs" VerticalAlignment="Center" FontSize="13" Foreground="#6B7280"/>
                            </StackPanel>

                            <Button Grid.Column="2" 
                                    Command="{Binding Data.RemoveFromPlanCommand, Source={StaticResource ViewModelProxy}}" 
                                    CommandParameter="{Binding}"
                                    Background="Transparent" BorderThickness="0" Padding="8">
                                <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xEC28;" Foreground="#EF4444" FontSize="16"/>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Column="1" Padding="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,24">
                <StackPanel Spacing="4">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="Shopping List" Style="{StaticResource PageTitleStyle}"/>
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xF11E;" FontSize="28" Foreground="#10B981" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="Agregasi otomatis dari seluruh kebutuhan bahan." FontSize="14" Foreground="#6B7280" FontFamily="{StaticResource AppFont}"/>
                </StackPanel>

                <Button Command="{Binding GenerateShoppingListCommand}" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="White" BorderBrush="#E5E7EB" BorderThickness="1" Padding="16,8" CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon FontFamily="{StaticResource RemixIcon}" Glyph="&#xF064;" Foreground="#4B5563"/>
                        <TextBlock Text="Hitung Ulang" FontFamily="{StaticResource AppFontBold}" Foreground="#4B5563"/>
                    </StackPanel>
                </Button>
            </Grid>

            <controls:DataGrid Grid.Row="1" ItemsSource="{Binding ShoppingList}" 
                               AutoGenerateColumns="False" 
                               GridLinesVisibility="Horizontal"
                               IsReadOnly="True"
                               BorderThickness="0"
                               RowHeight="48"
                               FontFamily="{StaticResource AppFontMedium}">

                <controls:DataGrid.Resources>
                    <SolidColorBrush x:Key="DataGridColumnHeaderBackgroundBrush" Color="Transparent"/>
                </controls:DataGrid.Resources>

                <controls:DataGrid.Columns>
                    <controls:DataGridTemplateColumn Header="Nama Bahan" Width="2*">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding IngredientName}" VerticalAlignment="Center" Margin="12,0" FontFamily="{StaticResource AppFontBold}" FontSize="14"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <controls:DataGridTemplateColumn Header="Total Butuh" Width="*">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TotalQuantity}" VerticalAlignment="Center" Margin="12,0" FontFamily="{StaticResource AppFontMedium}" Foreground="#2563EB"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <controls:DataGridTemplateColumn Header="Satuan" Width="0.8*">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Unit}" VerticalAlignment="Center" Margin="12,0" FontFamily="{StaticResource AppFont}" Foreground="#6B7280"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>

                    <controls:DataGridTemplateColumn Header="Est. Biaya" Width="*">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding EstimatedCost, Converter={StaticResource MoneyConv}}" VerticalAlignment="Center" Margin="12,0" 
                                           FontFamily="{StaticResource AppFontBold}" Foreground="#1F2937" HorizontalAlignment="Right"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

            <Grid Grid.Row="2" Background="#10B981" Padding="24" CornerRadius="12" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="TOTAL ESTIMASI BELANJA" FontSize="12" FontFamily="{StaticResource AppFontBold}" Foreground="White" Opacity="0.8" CharacterSpacing="100"/>
                    <TextBlock Text="Siapkan dana operasional sebesar:" FontSize="14" Foreground="White" Opacity="0.6"/>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="{Binding TotalEstimatedBudget, Converter={StaticResource MoneyConv}}" 
                           FontSize="32" FontFamily="{StaticResource AppFontBlack}" Foreground="White" VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Page>