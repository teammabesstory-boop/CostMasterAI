<Page
    x:Class="CostMasterAI.Views.ShoppingListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:helpers="using:CostMasterAI.Helpers"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:BindingProxy x:Key="ViewModelProxy" Data="{Binding}" />
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" BorderThickness="0,0,1,0" BorderBrush="#20000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Padding="24" Spacing="8">
                <TextBlock Text="Production Plan ðŸ“…" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Pilih menu yang akan dimasak hari ini." Opacity="0.6"/>
            </StackPanel>

            <Grid Grid.Row="1" Padding="24,0,24,24" ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox ItemsSource="{Binding AllRecipes}" SelectedItem="{Binding SelectedRecipeToAdd, Mode=TwoWay}" 
                          DisplayMemberPath="Name" PlaceholderText="Tambah Menu ke Rencana..." HorizontalAlignment="Stretch"/>

                <Button Grid.Column="1" Content="Add" Command="{Binding AddToPlanCommand}" Style="{StaticResource AccentButtonStyle}"/>
            </Grid>

            <ListView Grid.Row="2" ItemsSource="{Binding ProductionPlan}" Padding="12">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Background="{ThemeResource SystemControlBackgroundBaseLowBrush}" CornerRadius="8" Padding="12" Margin="0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding Recipe.Name}" FontWeight="Bold"/>
                                <TextBlock FontSize="10" Opacity="0.5">
                                    <Run Text="Yield Asli: "/>
                                    <Run Text="{Binding Recipe.YieldQty}"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center" Margin="16,0">
                                <TextBlock Text="Target:" VerticalAlignment="Center" FontSize="12" Opacity="0.6"/>
                                <TextBox Text="{Binding TargetQty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="80" HorizontalAlignment="Right"/>
                                <TextBlock Text="Pcs" VerticalAlignment="Center" FontSize="12" Opacity="0.6"/>
                            </StackPanel>

                            <Button Grid.Column="2" Content="âœ•" 
                                    Command="{Binding Data.RemoveFromPlanCommand, Source={StaticResource ViewModelProxy}}" 
                                    CommandParameter="{Binding}"
                                    Background="Transparent" BorderThickness="0" Foreground="Red"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Column="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="ðŸ›’ Daftar Belanja (Shopping List)" FontSize="24" FontWeight="Bold"/>
                    <TextBlock Text="Agregasi otomatis dari seluruh kebutuhan bahan." Opacity="0.6"/>
                </StackPanel>

                <Button Content="ðŸ”„ Hitung Ulang (Refresh)" Command="{Binding GenerateShoppingListCommand}" HorizontalAlignment="Right" VerticalAlignment="Top"/>
            </Grid>

            <controls:DataGrid Grid.Row="1" ItemsSource="{Binding ShoppingList}" 
                               AutoGenerateColumns="False" 
                               GridLinesVisibility="Horizontal"
                               IsReadOnly="True">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="Nama Bahan" Binding="{Binding IngredientName}" Width="2*"/>
                    <controls:DataGridTextColumn Header="Kebutuhan" Binding="{Binding TotalQuantity}" Width="*"/>
                    <controls:DataGridTextColumn Header="Satuan" Binding="{Binding Unit}" Width="0.8*"/>
                    <controls:DataGridTextColumn Header="Est. Biaya" Binding="{Binding EstimatedCost, Converter={StaticResource MoneyConv}}" Width="*"/>
                </controls:DataGrid.Columns>
            </controls:DataGrid>

            <Grid Grid.Row="2" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="24" CornerRadius="8" Margin="0,24,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="16">
                    <TextBlock Text="Total Estimasi Belanja:" FontSize="16" VerticalAlignment="Center" Opacity="0.7"/>
                    <TextBlock Text="{Binding TotalEstimatedBudget, Converter={StaticResource MoneyConv}}" FontSize="32" FontWeight="Bold" Foreground="Green"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>